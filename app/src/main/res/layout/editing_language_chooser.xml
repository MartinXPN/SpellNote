<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.xpn.spellnote.ui.document.edit.options.EditingLanguageChooserVM" />
    </data>

    <RelativeLayout
        android:gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onTouch="@{() -> viewModel.onHideLanguageList()}">


        <ImageButton
            android:id="@+id/current_language"
            android:layout_width="@dimen/editing_language_flag_size"
            android:layout_height="@dimen/editing_language_flag_size"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="@{() -> viewModel.onShowAvailableLanguages()}"
            app:imageUrl="@{viewModel.currentLanguageLogoUrl}"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null" />

        <android.support.v7.widget.CardView
            android:id="@+id/supported_languages_card"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:visibility="gone"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <com.samvel1024.databindingrv.BindingRecyclerView
                android:id="@+id/supported_languages_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:bindingVarPath="com.xpn.spellnote.BR.viewModel"
                app:itemLayoutResId="@layout/item_editing_language_grid"
                app:viewModelList="@{viewModel.listViewModels}" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>