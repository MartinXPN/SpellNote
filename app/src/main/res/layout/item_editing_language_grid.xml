<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.xpn.spellnote.ui.document.edit.options.EditingLanguageListItemVM" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:onClick="@{() -> model.onLanguageSelected()}"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/language_flag"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_flag_arm"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/language_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top|center_horizontal"
            android:textSize="12sp"
            android:textColor="#aa000000"
            android:lines="2"
            android:ellipsize="end"
            android:text="@{model.languageName}"
            android:layout_below="@+id/language_flag"
            android:layout_alignRight="@+id/language_flag"
            android:layout_alignEnd="@+id/language_flag"
            android:layout_alignLeft="@+id/language_flag"
            android:layout_alignStart="@+id/language_flag"/>
    </RelativeLayout>
</layout>