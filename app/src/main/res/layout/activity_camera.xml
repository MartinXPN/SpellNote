<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.xpn.spellnote.ui.document.edit.imagetextrecognition.CameraVM" />

        <import type="com.xpn.spellnote.ui.document.edit.imagetextrecognition.CameraVM.State"/>
        <import type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CameraActivity">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:src="@{viewModel.currentImage}"
            android:visibility="@{viewModel.state != State.CAPTURING ? View.VISIBLE : View.GONE}"
            android:contentDescription="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:adjustViewBounds="true"
            android:visibility="@{viewModel.state == State.CAPTURING ? View.VISIBLE : View.GONE}"
            app:autoFocus="true"
            app:aspectRatio="4:3"
            app:facing="back"
            app:flash="off"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.xpn.spellnote.ui.document.edit.imagetextrecognition.GraphicOverlay
            android:id="@+id/graphic_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/operations_background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/shadow_camera"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/capture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_capture"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:visibility="@{viewModel.state == State.CAPTURING ? View.VISIBLE : View.GONE}"
            android:onClick="@{() -> viewModel.captureImage()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/operations_background"
            app:layout_constraintTop_toTopOf="@+id/operations_background" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="@{viewModel.state == State.PROCESSING_TEXT ? View.VISIBLE : View.GONE}"
            style="?android:attr/progressBarStyleLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/operations_background"
            app:layout_constraintTop_toTopOf="@+id/operations_background" />

        <ImageButton
            android:id="@+id/done"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_done"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="@{viewModel.state == State.DONE ? View.VISIBLE : View.GONE}"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/operations_background"
            app:layout_constraintTop_toTopOf="@+id/operations_background" />

        <ImageButton
            android:id="@+id/retake"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_retake"
            android:visibility="@{viewModel.state == State.DONE ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/operations_background"
            app:layout_constraintTop_toTopOf="@+id/operations_background"
            app:layout_constraintHorizontal_bias="0.2" />

        <ImageButton
            android:id="@+id/choose_from_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_gallery"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/operations_background"
            app:layout_constraintTop_toTopOf="@+id/operations_background"
            app:layout_constraintHorizontal_bias="0.8" />


    </android.support.constraint.ConstraintLayout>
</layout>