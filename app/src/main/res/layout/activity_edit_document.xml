<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="model"
            type="com.xpn.spellnote.ui.document.edit.EditDocumentVM" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.document.edit.ActivityEditDocument">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbar_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/ic_done"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_box"
            android:overScrollMode="ifContentScrolls" >

            <com.xpn.spellnote.ui.document.edit.content.EditCorrectText
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textNoSuggestions"
                android:gravity="top|start"

                android:padding="15dp"

                android:background="@drawable/rectangle_transparent"
                android:keepScreenOn="true"
                android:cursorVisible="true"

                android:hint="Text"
                android:text="@={model.content}"/>
        </ScrollView>


        <fragment
            android:id="@+id/fragment_supported_languages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:name="com.xpn.spellnote.ui.document.edit.options.FragmentChooseEditingLanguage"
            tools:layout="@layout/fragment_choose_editing_language" />


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/toolbar_box"
            android:background="@drawable/shadow" />
    </RelativeLayout>
</layout>
