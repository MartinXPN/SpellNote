<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorLink">@color/url_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NavigationDrawer" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DeleteProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/delete_dictionary_progress_color</item>
    </style>

    <style name="SaveProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/save_dictionary_progress_color</item>
    </style>


    <style name="TutorialTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#a0000000</item>
        <item name="sv_showcaseColor">#000000</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/TutorialTitleTheme</item>
        <item name="sv_detailTextAppearance">@style/TutorialTextTheme</item>
    </style>

    <style name="TutorialTitleTheme" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TutorialTextTheme" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>
