<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xpn.spellnote">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".activities.ActivityViewDocuments"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ActivitySelectLanguages"
            android:label="@string/title_activity_select_languages"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.ActivityAbout"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".activities.ActivityEditDocument"
            android:label="@string/title_activity_edit_document"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>
</manifest>
